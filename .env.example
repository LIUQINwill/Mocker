# 应用配置
APP_NAME=Mocker API Platform
APP_VERSION=0.1.0
DEBUG=true

# 数据库配置
# 选择以下其中一种数据库配置：

# MySQL配置
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/mocker

# PostgreSQL配置
# DATABASE_URL=postgresql://username:password@localhost:5432/mocker

# SQLite配置（开发测试用）
# DATABASE_URL=sqlite:///./mocker.db

DATABASE_ECHO=false

# API配置
API_V1_STR=/api/v1

# CORS配置
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# Mock服务配置
MOCK_PREFIX=/mock
